<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/backgroundMain">


    <ImageView
        android:id="@+id/persons"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="14dp"
        android:src="@drawable/person1" />

    <TextView
        android:id="@+id/text_bigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/persons"
        android:ellipsize="end"
        android:fontFamily="@font/farro"
        android:maxLines="1"
        android:layout_toStartOf="@id/soat"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_smaller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_bigger"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/persons"
        android:ellipsize="end"
        android:fontFamily="@font/farro"
        android:maxLines="1"
        android:layout_toStartOf="@id/checkordouble"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/soat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/farro"
        android:text="soat"
        android:textColor="#A3A3A3" />

    <ImageView
        android:id="@+id/checkordouble"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/soat"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/doublecheck_white"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#283E5C"
        android:layout_marginStart="92dp"/>


</RelativeLayout>